<% var file = data['file']; %>
<% var query = data['query']; %>
<% var file_length = Object.keys(file).length; %>
<% var addItem = function(curPos) { %>
<%      var item = file[curPos]['name'].trim() + ((file[curPos]['extension'] == '') ?  '' : '.'+file[curPos]['extension']) %>

                

<%      if(file[curPos]['type'] == 'directory') { %>
                <td class=""></td>
                <td class="text-left">
                <a href="<%= query %>/<%= item %>" class="">
                        <i class="fas fa-folder text-truncate">
                                <%= item %>
                        </i>
                </a>
                </td>
                <td class=""></td>
                <td class=""></td>
<%      } else { %>

                <td class="">
                        <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="d_checkbox<%= curPos %>" name="d_checkbox" onchange="addList('d_checkbox<%= curPos %>')">
                                <label class="custom-control-label" for="d_checkbox<%= curPos %>"></label>
                                <input type="hidden" id="d_checkbox<%= curPos %>_hidden" value="/<%= item %>">
                        </div>
                </td>   
                
                <td class="text-left">
                        <i class="fas fa-file text-truncate">
                                <%= item %>
                        </i>
                </td>
                <td class=""><%= file[curPos]['size'] %></td>
                <td class=""><%= file[curPos]['ctime'] %></td>
<%      } %>

<% } %>

<!DOCTYPE html>

<html>

<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

        <script type="text/javascript">
                var downloadList = [];

                var addList = function(id){
                        var curItem = document.getElementById(id);
                        var curItem_hidden = document.getElementById(id+'_hidden');

                        if(curItem.checked) {
                                downloadList.push(curItem_hidden.value);
                        }
                        else {
                                var index = downloadList.indexOf(curItem_hidden.value);
                                console.log(index);
                                if(index != -1) {
                                        downloadList.splice(index , 1);
                                }
                        }
                }

                var download = () => {
                        if(downloadList.length < 1) {
                                
                        }
                        else {
                                var JSON_downloadList = {};
                                for(var i = 0; i < downloadList.length; i++) {
                                        JSON_downloadList[i] = downloadList[i];
                                }
                                document.getElementById('downloadList').value = JSON.stringify(JSON_downloadList);
                        }
                };
                
        </script>
</head>



<body>



        <div class="container-fluid" style="padding-top: 3%">
                <div class="row">
                        <div class="table-responsive table-bordered">                        
                                <table class="table table-dark table-striped table-hover align-middle text-center">
                                <thead>
                                        <tr>
                                                <th class="w-5">CHECK</th>
                                                <th class="w-50">NAME</th>
                                                <th class="w-25">SIZE</th>
                                                <th class="w-20">TIME</th>
                                        </tr>
                                </thead>
                                <tbody>
                                        <% for(var i = 0; i < file_length; i++) { %>
                                        <tr>
                                                <% addItem(i) %>
                                        </tr>
                                        <% } %>
                                </tbody>
                                </table>
                        </div>

                </div>

                <div class="row text-center align-middle">

                                <div class="progress col-10 p-0" style="height:40px">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                                </div>
                                <div class="col-2 p-0 m-0">
                                        <form method="POST" action="/fileDownload">
                                                <input type="hidden" id="downloadList" name="downloadList" value="">
                                                <input type="button" class="btn btn-outline-dark" value="DOWNLOAD" style="width: 100%; height:100%" onclick="download();submit();">
                                        </form>
                                </div>
                </div>
        </div>

</body>

</html>