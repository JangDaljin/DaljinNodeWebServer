        <script type="text/javascript">
                
                var files               = null;
                var files_length        = null;
                var path                = null;
                var files_checked       = {};
                var used_storage        = null;
                var max_storage         = null;
                var isIE                = false;

                //초기화
                var init = function() {
                        files        = JSON.parse('<%- files_JSON_String %>');
                        files_length = Object.keys(files).length;
                        path         = '<%= path %>';
                        
                        for(var i = 0 ; i < files_length; i++) {
                                files_checked[i] = false;
                        }
                        
                        used_storage = parseInt('<%- used_storage %>');
                        max_storage = parseInt('<%- max_storage %>');

                        if(IECheck()) {
                                isIE = true;
                                document.getElementById('iealert').style.display = "block";
                        }
                }

                var IECheck = function() {
                        var agent = navigator.userAgent.toLowerCase();
                        var name = navigator.appName;
                        var browser = null;
                        if(name == 'Microsoft Internet Explorer' || agent.indexOf('trident') > -1 || agent.indexOf('edge/') > -1) {
                                browser = 'ie';
                                if(name === 'Microsoft Internet Explorer') { // IE old version (IE 10 or Lower)
                                        agent = /msie ([0-9]{1,}[\.0-9]{0,})/.exec(agent);
                                        browser += parseInt(agent[1]);
                                } 
                                else { // IE 11+
                                        if(agent.indexOf('trident') > -1) { // IE 11 
                                                browser += 11;
                                        }
                                        else if(agent.indexOf('edge/') > -1) { // Edge
                                                browser = 'edge';
                                        }
                                }
                        }
                        return (browser != null)? true : false;
                }

                var storage_init = function(progress_id , percent_id) {
                        var progress_element = document.getElementById(progress_id);
                        var percent_element = document.getElementById(percent_id);

                        var used_percent = ((used_storage / max_storage) * 100).toFixed(2);
                        
                        var arr_max_volume = getVolumeSize(max_storage , 0);
                        var arr_used_volue = getVolumeSize(used_storage , 0);


                        progress_element.style.width = used_percent+'%';
                        percent_element.innerHTML = used_percent + '% (' + arr_max_volume + '중 ' + arr_used_volue +'사용)';
                }
                
                var getVolumeSize = function (size , deter) {    
                        if(size / 1024 > 1) {                           
                                return getVolumeSize(size / 1024 , deter+1);  
                        } else {                                        
                                var res = '';                                   
                                switch(deter) {                                 
                                        case 0 :                                
                                                res = 'Byte';                              
                                                break;                                  
                                        case 1 :                                        
                                                res = 'KB';                             
                                                break;                                  
                                        case 2 :                                        
                                                res = 'MB';                             
                                                break;                                  
                                        case 3 :                                        
                                                res = 'GB';                             
                                                break;                                  
                                        case 4 :                                        
                                                res = 'TB';                             
                                                break;                                 
                                        default :                                       
                                                res = "NaN";                            
                                                break;                                  
                                }  
                                if(res=='Byte') {
                                        return size.toFixed(0)+res;  
                                }
                                else {
                                        return size.toFixed(2)+res;  
                                }
                                        
                        }                                             
                }

                //체크
                var Check = function (item , pos) {
                        if(item.checked) {
                                files_checked[pos] = true;
                        }
                        else {
                                files_checked[pos] = false;
                        }
                }       

                //전부 체크
                var AllCheck = function (source, checkName) {
                        var checkboxes = document.getElementsByName(checkName);
                        for(var i = 0 ; i < checkboxes.length; i ++) {
                                for(var i = 0 ; i < checkboxes.length; i++) {
                                        checkboxes[i].checked = source.checked;
                                        checkboxes[i].onchange();
                                }
                        }
                }

                //다운로드
                var Download = function (item_hidden_id , type_hidden_id , path_hidden_id , pos) {
                        if(pos >= files_length) {
                                return;
                        }
                        if(files_checked[pos] == true) {
                                document.getElementById(item_hidden_id).value = files[pos]['fullname'].trim();
                                document.getElementById(type_hidden_id).value = files[pos]['type'];
                                document.getElementById(path_hidden_id).value = path;
                        
                                //jQuery.fileDownload.js plugin 사용
                                $.fileDownload($('#downloadForm').prop('action'), { 
        
                                        httpMethod: "POST", 
                                        data: $('#downloadForm').serialize(), 

                                        successCallback: function (url) {
                                                Download(item_hidden_id , type_hidden_id , path_hidden_id , pos+1);
                                        },
                                        failCallback: function (responseHtml, url, error) { 
                                                alert("DOWNLOAD ERROR");
                                        }
                                });
                        }
                        else {
                                Download(item_hidden_id , type_hidden_id ,path_hidden_id, pos+1);
                        }
                }

                //삭제
                var Delete = function () {

                        var JSON_items = {};
                        var cnt = 0;
                        for(var i = 0 ; i < files_length; i++) {
                                if(files_checked[i]==true) {
                                        var JSON_item = {};
                                        JSON_item['name'] = files[i]['fullname'];
                                        JSON_item['type'] = files[i]['type'];
                                        JSON_items[cnt++] = JSON_item;
                                }
                        }
                        if(cnt == 0) {
                                alert("삭제 항목을 선택해주세요.");
                                return;
                        }

                        outputdata = {};
                        outputdata['deletePath'] = '<%= path %>';
                        outputdata['deleteList'] = JSON.stringify(JSON_items);

                        $.ajax({
                                url : "/delete",
                                type : "POST",
                                data : JSON.stringify(outputdata),
                                contentType : "application/json",
                                cache : false,
                                async : true,
                                headers : {"cache-control" : "no-cache"},
                                success : function (inputdata_jsonstr) {
                                        var inputdata = JSON.parse(inputdata_jsonstr);
                                        var msg = "";
                                        var refresh = false;
                                        for(var i = 0 ; i < Object.keys(inputdata).length; i++) {
                                                if(inputdata[i]['error']) {
                                                        msg += inputdata[i]['msg'] + "\n";
                                                }
                                                else {
                                                        refresh = true;
                                                }
                                        }
                                        if(msg) {
                                                alert(msg);
                                        }
                                        if(refresh) {
                                                window.location.reload();
                                        }
                                },
                                error : function () {
                                        alert('에러발생');
                                }
                        });
                }
                
                //업로드 리스트( 사용안함 )
                var Upload = function (upload_file_id , upload_ul_id) {
                        var upload_files = document.getElementById(upload_file_id);
                        var list_files = upload_files.files;

                        //리스트 초기화
                        var ul = document.getElementById(upload_ul_id);
                        
                        while ( ul.hasChildNodes() ) 
                        {       
                                ul.removeChild( ul.firstChild ); 
                        }

                        //리스트 추가
                        for(var i = 0 ; i < list_files.length; i++) {

                                var item = document.createElement('li');
                                var content = document.createTextNode(list_files[i].name);
                                
                                item.id='i_upload_file_' + i;
                                item.name = 'n_upload_file_' + i;
                                item.className = 'list-group-item d-flex justify-content-between align-items-center';

                                item.appendChild(content);

                                ul.appendChild(item);
                                
                        }
                };

                //업로드 시작
                var Upload_Click = function (form_id){
                        var bottomNav = document.getElementById('bottomNavbar');

                        
                        var form_data = new FormData(document.getElementById(form_id));

                        bottomNav.style.visibility = "visible";

                        $.ajax({
                                url : "/upload",
                                type : "POST",
                                data : form_data,
                                cache : false,
                                async : true,
                                headers : {"cache-control" : "no-cache"},
                                processData : false,
                                contentType : false,
                                success : function(inputdata_str) {
                                        var inputdata = JSON.parse(inputdata_str);
                                        alert(inputdata.msg);
                                        window.location.href = '/file?path=' + '<%= encodeURIComponent(path) %>';
                                },
                                
                                error : function () {
                                        alert('에러발생');
                                },
                                xhr: function(){
                                        var xhr = $.ajaxSettings.xhr() ;
                                        // set the onprogress event handler
                                        xhr.upload.onprogress = function(evt){ 
                                                document.getElementById('upload_progress').style.width = parseInt(evt.loaded/evt.total*100) +'%';
                                                document.getElementById('upload_percent').innerHTML = parseInt(evt.loaded/evt.total*100) +'%';
                                        } ;
                                        // set the onload event handler
                                        xhr.upload.onload = function(){ 
                                                
                                        } ;
                                        // return the customized object
                                        return xhr ;
                                }
                        });
                }


                //폴더명 체크
                var makeDirectory = function (dom_makeDirectoryName) {
                       var dirName = document.getElementById(dom_makeDirectoryName).value;
                       var dirPath = '<%= path %>';

                       if(dirName == '' || dirName==null) {
                               alert("폴더명을 적어주세요");
                               return;
                       }
                       
                        outputdata = {};
                        outputdata['mkdirName'] = dirName
                        outputdata['mkdirPath'] = dirPath
                        $.ajax({
                                url : "/mkdir",
                                type : "POST",
                                data : JSON.stringify(outputdata),
                                contentType : "application/json",
                                cache : false,
                                async : true,
                                headers : {"cache-control" : "no-cache"},
                                success : function (inputdata_jsonstr) {
                                        var inputdata = JSON.parse(inputdata_jsonstr);
                                        alert(inputdata['msg']);
                                        if(inputdata['error'] == false) {
                                                window.location.reload();
                                        }
                                },
                                error : function () {
                                        alert('에러발생');
                                }
                        });
        
                }


                        

                //드래그 인
                var dragEnter = function(evt) {
                        evt.preventDefault();
                        alert("enter");
                }

                var dragOver= function(evt) {
                        evt.preventDefault();
                        alert("over");
                }


                //드래그 아웃
                var drageLeave = function(evt) {
                        evt.preventDefault();
                        alert('leave');
                }

                var drageEnd = function(evt) {
                        evt.preventDefault();
                        alert('End');
                }


                //드래그
                var drag = function(evt) {
                        evt.preventDefault();
                        alert('drag');
                }

                //드랍
                var drop = function(evt) {
                        evt.preventDefault();
                        alert("drop");
                }

                var logout = function() {
                        $.ajax({
                                url : "/logout",
                                type : "POST",
                                data : {},
                                contentType : "application/json",
                                cache : false,
                                async : true,
                                headers : {"cache-control" : "no-cache"},
                                success : function (inputdata_jsonstr) {
                                        var inputdata = JSON.parse(inputdata_jsonstr);
                                        if(inputdata['error']) {
                                                alert("로그아웃 실패");
                                        }
                                        else {
                                                window.location.href="/";
                                        }
                                },
                                error : function () {
                                        alert('에러발생');
                                }
                        });
                }

                //툴팁 작동 코드
                $(document).ready(function(){
                        $('[data-toggle="tooltip"]').tooltip();   
                });

        </script>

        
</head>

